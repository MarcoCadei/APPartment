<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.unison.appartment">
    <!-- Permesso per poter usare il registratore -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_appartment"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_appartment_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".HomeListActivity"></activity>
        <activity android:name=".JoinHomeActivity" />
        <activity android:name=".ImageDetailActivity" />
        <activity android:name=".RewardDetailActivity" />
        <activity android:name=".CreateRewardActivity" />
        <activity android:name=".FamilyMemberDetailActivity" />
        <activity android:name=".TaskDetailActivity" />
        <activity android:name=".CreateTaskActivity" />
        <activity android:name=".MainActivity" />
        <activity android:name=".SignInActivity" />
        <activity android:name=".SignUpActivity" />
        <activity android:name=".CreateHomeActivity" />
        <activity android:name=".EnterActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>