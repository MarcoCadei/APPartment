<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RewardDetailActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/activity_reward_detail_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:liftOnScroll="false">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/activity_reward_detail_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentInsetStartWithNavigation="0dp"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:title="@string/activity_reward_detail_title"
            app:titleMarginStart="32dp"
            app:titleTextColor="@color/colorPrimaryText" />
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/activity_reward_detail_appbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/activity_reward_detail_text_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="32dp"
                android:text="@string/activity_reward_detail_text_name"
                android:textSize="@dimen/text_title"
                app:layout_constraintVertical_chainStyle="packed"
                app:layout_constraintBottom_toTopOf="@id/activity_reward_detail_text_points"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/activity_reward_detail_text_points"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="@string/activity_reward_detail_text_points"
                android:textSize="@dimen/text_medium"
                app:layout_constraintBottom_toTopOf="@id/activity_reward_detail_text_description_title"
                app:layout_constraintEnd_toEndOf="@id/activity_reward_detail_text_name"
                app:layout_constraintStart_toStartOf="@id/activity_reward_detail_text_name"
                app:layout_constraintTop_toBottomOf="@id/activity_reward_detail_text_name" />

            <TextView
                android:id="@+id/activity_reward_detail_text_description_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/activity_reward_detail_text_description_title"
                android:textSize="@dimen/text_medium"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/activity_reward_detail_text_description_value"
                app:layout_constraintEnd_toEndOf="@id/activity_reward_detail_text_name"
                app:layout_constraintStart_toStartOf="@id/activity_reward_detail_text_name"
                app:layout_constraintTop_toBottomOf="@id/activity_reward_detail_text_points" />

            <TextView
                android:id="@+id/activity_reward_detail_text_description_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="@string/placeholder_text_long"
                android:textSize="@dimen/text_small"
                app:layout_constraintBottom_toTopOf="@id/activity_reward_detail_btn_reserve"
                app:layout_constraintEnd_toEndOf="@id/activity_reward_detail_text_name"
                app:layout_constraintStart_toStartOf="@id/activity_reward_detail_text_name"
                app:layout_constraintTop_toBottomOf="@id/activity_reward_detail_text_description_title" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/activity_reward_detail_btn_reserve"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="8dp"
                android:text="@string/activity_reward_detail_btn_reserve_enabled"
                app:layout_constraintBottom_toTopOf="@id/activity_reward_detail_btn_delete"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/activity_reward_detail_text_description_value" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/activity_reward_detail_btn_delete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@android:color/holo_red_dark"
                android:text="@string/activity_reward_detail_btn_delete"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/activity_reward_detail_btn_reserve" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>