<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InsertPostFragment">

    <!--TODO metti hint string-->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/fragment_insert_post_input_post"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:hint="@string/fragment_insert_post_hint_post"
        android:textColorHint="@color/colorPrimaryLight"
        app:layout_constraintEnd_toStartOf="@id/fragment_insert_post_btn_send"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/medium_text" />

    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:id="@+id/fragment_insert_post_btn_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:tint="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_insert_post_input_post"
        app:layout_constraintEnd_toStartOf="@id/fragment_insert_post_btn_img"
        app:layout_constraintStart_toEndOf="@id/fragment_insert_post_input_post"
        app:layout_constraintTop_toTopOf="@+id/fragment_insert_post_input_post"
        app:srcCompat="@drawable/ic_send_white_24dp" />

    <ImageView
        android:id="@+id/fragment_insert_post_btn_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:tint="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_insert_post_input_post"
        app:layout_constraintEnd_toStartOf="@id/fragment_insert_post_btn_audio"
        app:layout_constraintStart_toEndOf="@id/fragment_insert_post_btn_send"
        app:layout_constraintTop_toTopOf="@+id/fragment_insert_post_input_post"
        app:srcCompat="@drawable/ic_image_white_24dp" />

    <ImageView
        android:id="@+id/fragment_insert_post_btn_audio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:tint="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_insert_post_input_post"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/fragment_insert_post_btn_img"
        app:layout_constraintTop_toTopOf="@+id/fragment_insert_post_input_post"
        app:srcCompat="@drawable/ic_mic_none_white_24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>