<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.TodoFragment">

    <FrameLayout
        android:id="@+id/fragment_todo_progress_container"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/fragment_todo_todolist">
        <androidx.core.widget.ContentLoadingProgressBar
            android:id="@+id/fragment_todo_progress"
            android:indeterminate="true"
            style="@android:style/Widget.Material.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_gravity="center"/>
    </FrameLayout>

    <TextView
        android:id="@+id/fragment_todo_empty_home_list_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/fragment_todo_empty_homes_list_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_todo_progress_container"
        app:layout_constraintVertical_bias="0.0"
        android:layout_margin="@dimen/margin_large"
        style="@style/Component.TextView.MultiLine.ObjectTitle"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/fragment_todo_empty_home_list_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/fragment_todo_empty_homes_list"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_todo_empty_home_list_title"
        app:layout_constraintVertical_bias="0.0"
        android:layout_margin="@dimen/margin_large"
        android:visibility="gone"/>

    <fragment
        android:id="@+id/fragment_todo_todolist"
        android:name="com.unison.appartment.fragments.TodoListFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout="@layout/fragment_todo_list" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fragment_todo_float_add_task"
        style="@style/CustomFloatingActionButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_add" />

</androidx.constraintlayout.widget.ConstraintLayout>