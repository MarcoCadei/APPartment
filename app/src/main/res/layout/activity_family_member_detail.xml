<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FamilyMemberDetailActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/activity_family_member_detail_appbar"
        style="@style/Component.AppBarWithBackButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/activity_family_member_detail_toolbar"
            style="@style/Component.ToolbarWithBackButton"
            app:title="@string/activity_family_member_detail_title" />
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/activity_family_member_detail_layout_header"
        style="@style/Component.Layout.Header"
        app:layout_constraintBottom_toTopOf="@id/activity_family_member_detail_layout_attributes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_family_member_detail_appbar">

        <ImageView
            android:id="@+id/activity_family_member_detail_img_profile"
            style="@style/Component.ImageView.ProfileImage"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/activity_family_member_detail_text_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_person" />

        <TextView
            android:id="@+id/activity_family_member_detail_text_name"
            style="@style/Component.TextView.MultiLine.ObjectTitle"
            android:text="@string/activity_family_member_detail_text_name"
            app:layout_constraintBottom_toTopOf="@id/activity_family_member_detail_layout_points"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/activity_family_member_detail_img_profile"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/activity_family_member_detail_layout_points"
            style="@style/Component.Layout.Points"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/activity_family_member_detail_img_profile"
            app:layout_constraintTop_toBottomOf="@id/activity_family_member_detail_text_name">

            <TextView
                android:id="@+id/activity_family_member_detail_text_points_name"
                style="@style/Component.TextView.SingleLine.PointsName"
                android:paddingEnd="8dp"
                android:text="@string/activity_family_member_points_name"
                android:textSize="@dimen/text_extra_extra_large"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/activity_family_member_detail_text_points_value"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="parent" />

            <TextView
                android:id="@+id/activity_family_member_detail_text_points_value"
                style="@style/Component.TextView.SingleLine.PointsValue"
                android:text="25060"
                android:textSize="@dimen/text_extra_extra_large"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/activity_family_member_detail_text_points_name"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/activity_family_member_detail_layout_attributes"
        style="@style/Component.Layout.AttributeSet.FamilyMemberDetail"
        app:layout_constraintBottom_toTopOf="@id/activity_family_member_detail_btn_delete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_family_member_detail_layout_header">

        <TextView
            android:id="@+id/activity_family_member_detail_text_role_title"
            style="@style/Component.TextView.MultiLine.AttributeTitle"
            android:text="@string/activity_family_member_detail_text_role_title"
            app:layout_constraintBottom_toTopOf="@id/activity_family_member_detail_text_role_value"
            app:layout_constraintEnd_toStartOf="@+id/activity_family_member_detail_text_gender_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/activity_family_member_detail_text_role_value"
            style="@style/Component.TextView.MultiLine.AttributeValue"
            android:text="@string/placeholder_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/activity_family_member_detail_text_gender_value"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_family_member_detail_text_role_title" />

        <TextView
            android:id="@+id/activity_family_member_detail_text_gender_title"
            style="@style/Component.TextView.MultiLine.AttributeTitle"
            android:text="@string/activity_family_member_detail_text_gender_title"
            app:layout_constraintBottom_toTopOf="@id/activity_family_member_detail_text_gender_value"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/activity_family_member_detail_text_role_title"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/activity_family_member_detail_text_gender_value"
            style="@style/Component.TextView.MultiLine.AttributeValue"
            android:text="@string/placeholder_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/activity_family_member_detail_text_role_value"
            app:layout_constraintTop_toBottomOf="@id/activity_family_member_detail_text_gender_title" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/activity_family_member_detail_btn_delete"
        style="@style/Component.Button.FamilyMemberDetail"
        android:backgroundTint="@android:color/holo_red_dark"
        android:text="@string/activity_family_member_detail_btn_delete"
        app:layout_constraintBottom_toTopOf="@+id/fragment_achievement_list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_family_member_detail_layout_attributes" />

    <ScrollView
        style="@style/Component.ScrollView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        Text

        <fragment
            android:id="@+id/fragment_achievement_list"
            android:name="com.unison.appartment.AchievementListFragment"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activity_family_member_detail_btn_delete"
            tools:layout="@layout/fragment_achievement_list"/>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
