<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FamilyMemberDetailActivity"
    android:background="@color/colorBackground">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/activity_family_member_detail_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:liftOnScroll="false">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/activity_family_member_detail_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentInsetStartWithNavigation="0dp"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:title="@string/activity_family_member_detail_title"
            app:titleTextColor="@color/colorPrimaryText" />
    </com.google.android.material.appbar.AppBarLayout>

    <ImageView
        android:id="@+id/activity_family_member_detail_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@id/activity_family_member_detail_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_family_member_detail_appbar"
        app:srcCompat="@drawable/ic_person" />

    <TextView
        android:id="@+id/activity_family_member_detail_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginTop="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/activity_family_member_detail_image"
        app:layout_constraintTop_toTopOf="@+id/activity_family_member_detail_image" />

    <TextView
        android:id="@+id/activity_family_member_detail_points_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fragment_family_member_points_label"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintEnd_toStartOf="@+id/activity_family_member_detail_points_value"
        app:layout_constraintStart_toEndOf="@id/activity_family_member_detail_image"
        app:layout_constraintTop_toBottomOf="@+id/activity_family_member_detail_name" />

    <TextView
        android:id="@+id/activity_family_member_detail_points_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/activity_family_member_detail_points_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/activity_family_member_detail_points_label"
        app:layout_constraintTop_toTopOf="@+id/activity_family_member_detail_points_label" />

    <fragment
        android:id="@+id/fragment_achievement_list"
        android:name="com.unison.appartment.AchievementListFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_family_member_detail_image" />


</androidx.constraintlayout.widget.ConstraintLayout>
