<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/fragment_family_member_image_member"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_family_member_btn_delete_member"
        app:layout_constraintEnd_toStartOf="@+id/fragment_family_member_text_member_name"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fragment_family_member_btn_delete_member"
        app:srcCompat="@drawable/ic_person_white_24dp" />

    <TextView
        android:id="@+id/fragment_family_member_text_member_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Andrea Pitossi"
        android:textAppearance="?attr/textAppearanceListItem"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_family_member_btn_delete_member"
        app:layout_constraintEnd_toStartOf="@+id/fragment_family_member_text_member_points"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/fragment_family_member_image_member"
        app:layout_constraintTop_toTopOf="@+id/fragment_family_member_btn_delete_member" />

    <TextView
        android:id="@+id/fragment_family_member_text_member_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="Punti: 234"
        android:textAppearance="?attr/textAppearanceListItem"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_family_member_btn_delete_member"
        app:layout_constraintEnd_toStartOf="@+id/fragment_family_member_btn_delete_member"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/fragment_family_member_text_member_name"
        app:layout_constraintTop_toTopOf="@+id/fragment_family_member_btn_delete_member" />

    <ImageButton
        android:id="@+id/fragment_family_member_btn_delete_member"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/fragment_family_member_text_member_points"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_delete_black_24dp" />


</androidx.constraintlayout.widget.ConstraintLayout>
