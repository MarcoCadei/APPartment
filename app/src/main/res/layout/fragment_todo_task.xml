<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Component.Layout.ListItem">

    <ImageView
        android:id="@+id/fragment_todo_img_check"
        style="@style/Component.ImageView.ListItemIcon"
        android:contentDescription="@string/fragment_todo_img_check"
        android:src="@drawable/ic_check_circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/fragment_todo_layout_name"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fragment_todo_layout_name"
        app:layout_constraintStart_toEndOf="@id/fragment_todo_img_check"
        app:layout_constraintEnd_toStartOf="@id/fragment_todo_layout_points"
        app:layout_constraintTop_toTopOf="@id/fragment_todo_layout_points"
        app:layout_constraintBottom_toBottomOf="@id/fragment_todo_layout_points"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/fragment_todo_text_task_name"
            android:text="@string/placeholder_text"
            style="@style/Component.TextView.SingleLine.ListItemTitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/fragment_todo_text_task_description"
            android:text="@string/placeholder_text_long"
            style="@style/Component.TextView.SingleLine.ListItemDescription"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/fragment_todo_text_task_name"
            app:layout_constraintTop_toBottomOf="@+id/fragment_todo_text_task_name" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fragment_todo_layout_points"
        style="@style/Component.Layout.Points"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/fragment_todo_layout_name"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/fragment_todo_task_points_label"
            style="@style/Component.TextView.SingleLine.PointsName"
            android:text="@string/general_points_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragment_todo_task_points_value"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/fragment_todo_task_points_value"
            style="@style/Component.TextView.SingleLine.PointsValue"
            android:text="123456"
            app:layout_constraintBottom_toTopOf="@+id/fragment_todo_task_points_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
