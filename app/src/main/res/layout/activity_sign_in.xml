<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignInActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBackground">

            <TextView
                android:id="@+id/activity_signin_text_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="32dp"
                android:fontFamily="@font/shadows_into_light_two"
                android:text="@string/activity_signin_text_title"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="54sp"
                app:layout_constraintBottom_toTopOf="@+id/activity_signin_input_homename"
                app:layout_constraintEnd_toStartOf="@+id/activity_signin_img_title"
                app:layout_constraintStart_toStartOf="@+id/activity_signin_input_password"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed" />

            <ImageView
                android:id="@+id/activity_signin_img_title"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:contentDescription="@string/activity_signin_img_title_description"
                android:tint="@color/colorPrimary"
                app:layout_constraintBottom_toBottomOf="@+id/activity_signin_text_title"
                app:layout_constraintEnd_toEndOf="@+id/activity_signin_input_password"
                app:layout_constraintStart_toEndOf="@+id/activity_signin_text_title"
                app:layout_constraintTop_toTopOf="@+id/activity_signin_text_title"
                app:srcCompat="@drawable/ic_account_circle_black_24dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/activity_signin_input_homename"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="8dp"
                android:hint="@string/activity_signin_hint_housename"
                android:textColorHint="@color/colorPrimaryLight"
                app:layout_constraintBottom_toTopOf="@+id/activity_signin_input_username"
                app:layout_constraintEnd_toEndOf="@id/activity_signin_input_password"
                app:layout_constraintStart_toStartOf="@id/activity_signin_input_password"
                app:layout_constraintTop_toBottomOf="@+id/activity_signin_text_title">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/activity_signin_input_username"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:hint="@string/activity_signin_hint_username"
                android:textColorHint="@color/colorPrimaryLight"
                app:layout_constraintBottom_toTopOf="@+id/activity_signin_input_password"
                app:layout_constraintEnd_toEndOf="@id/activity_signin_input_password"
                app:layout_constraintStart_toStartOf="@id/activity_signin_input_password"
                app:layout_constraintTop_toBottomOf="@+id/activity_signin_input_homename">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/activity_signin_input_password"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="16dp"
                android:hint="@string/activity_signin_hint_password"
                android:textColorHint="@color/colorPrimaryLight"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/activity_signin_input_username">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:textColor="@color/colorPrimaryDark" />

            </com.google.android.material.textfield.TextInputLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floating_action_button"
        style="@style/Widget.MaterialComponents.FloatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_arrow_forward_black_24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>